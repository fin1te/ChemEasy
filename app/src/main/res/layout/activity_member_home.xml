            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/mh_tv_leaderboard"
                    android:layout_width="312dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/green_long_rect_btn_xml"
                    android:paddingStart="30dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:gravity="left|center"
                    android:textAllCaps="true"
                    android:text="Leaderboard"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry" />

                <ImageView
                    android:id="@+id/mh_sb_leaderboard"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/locked_counter"
                    android:gravity="center|right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/locked_counter"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/mh_tv_contact_us"
                    android:layout_width="312dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/cyan_long_rect_btn_xml"
                    android:paddingStart="30dp"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Contact Us"
                    android:gravity="left|center"
                    android:textAllCaps="true"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry" />

                <ImageView
                    android:id="@+id/mh_sb_contact_us"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/locked_counter"
                    android:gravity="center|right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/locked_counter"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/mh_tv_about_us"
                    android:layout_width="312dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/blue_long_rect_btn_xml"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="left|center"
                    android:paddingStart="30dp"
                    android:scaleType="fitXY"
                    android:text="About"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry" />

                <ImageView
                    android:id="@+id/mh_sb_about_us"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/locked_counter"
                    android:gravity="center|right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/locked_counter"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>