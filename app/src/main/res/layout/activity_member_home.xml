<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_bg"
    tools:context=".MemberHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="108dp"

        tools:layout_editor_absoluteY="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E63636"
            android:orientation="vertical"

            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/mh_tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="91dp"
                android:fontFamily="sans-serif-black"
                android:text="Welcome!"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/mh_iv_chem_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="83dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="82dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/chem_item2"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/mh_tv_learn"
                    android:layout_width="312dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/peach_long_rect_btn_xml"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="left|center"
                    android:paddingStart="30dp"
                    android:scaleType="fitXY"
                    android:text="Learn"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry" />

                <ImageView
                    android:id="@+id/mh_sb_learn"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/locked_counter"
                    android:gravity="center|right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/locked_counter"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="right|center"-->
<!--                    android:layout_marginRight="25sp"-->
<!--                    android:layout_marginTop="9sp"-->
<!--                    android:background="@drawable/locked_counter"-->
<!--                    android:src="@drawable/locked_counter"-->
<!--                    tools:ignore="ContentDescription,RtlHardcoded" />-->

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/mh_tv_play"
                    android:layout_width="312dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/orange_long_rect_btn_xml"
                    android:paddingStart="30dp"
                    android:scaleType="fitXY"
                    android:text="Play"
                    android:textAllCaps="true"
                    android:gravity="left|center"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription,HardcodedText,RtlCompat,RtlHardcoded,RtlSymmetry" />

                <ImageView
                    android:id="@+id/mh_sb_play"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|center"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/locked_counter"
                    android:gravity="center|right"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/locked_counter"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>

<!--            <Button-->
<!--                android:layout_width="312dp"-->
<!--                android:layout_height="68dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:background="@drawable/yellow_long_rect_btn_xml"-->
